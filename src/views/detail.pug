extends templates/layout

block content
  h2=movie.title
  if movie.coverImage
    img(src=`${movie.coverImage}`)
  p=movie.summary
  //- h3 ðŸ˜Ž released at #{movie.year || new Date().getFullYear()}
  //- h3 ðŸ˜Ž rating : #{movie.rating || 0} of 10
  if movie.genres
    each genre in movie.genres
      li #{genre}
  hr
  li
    a.btn.btn-primary(href=`/movies/${movie.id}/edit`, role="button") Edit Movie
  li
    a.btn.btn-destructive(href=`/movies/${movie.id}/delete`, role="button") Delete Movie
  //- button(type="button", onclick=`window.location.href='/movies/${movie.id}/edit'`) Edit Movie
  //- button(type="button", onclick=`window.location.href='/movies/${movie.id}/delete'`) Delete Movie