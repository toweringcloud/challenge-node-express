extends templates/layout

block content
  h2=pageTitle
  p.info Please fill the form to upload a new movie.
  form(action="/upload" method="POST")
    input(type="text" name="title" placeholder="Movie Title" required maxlength=50)
    input(type="text" name="summary" placeholder="Summary" required minlength=20)
    input(type="text" name="genres" placeholder="Genres (by comma)" required)
    input(type="submit" value="SAVE")
  if errorMessage
    p.error=errorMessage