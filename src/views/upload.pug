extends templates/layout

block content
  h2=pageTitle
  p.info Please fill the form to add a new movie.
  form(action="/upload" method="POST")
    input(type="text" name="title" placeholder="Title" required maxlength=50)
    input(type="text" name="summary" placeholder="Summary" required minlength=20)
    input(type="text" name="year" placeholder="Release Year")
    input(type="text" name="genres" placeholder="Genres (by comma)")
    input(type="text" name="posterImage" placeholder="Poster Image Path")
    input(type="submit" value="SAVE")
  if errorMessage
    p.error=errorMessage