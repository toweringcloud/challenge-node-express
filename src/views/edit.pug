extends templates/layout

block content
  h2=pageTitle
  p.info Please fill the form to update a movie information.
  form(action=`/movies/${movie.id}/edit` method="POST")
    input(type="text" name="title" placeholder="Movie Title" required maxlength=50 value=movie.title)
    input(type="text" name="summary" placeholder="Summary" required minlength=20 value=movie.summary)
    input(type="text" name="genres" placeholder="Genres (by comma)" required value=movie.genres.join(', '))
    input(type="text" name="year" placeholder="Release Year" value=movie.year)
    input(type="text" name="rating" placeholder="Rating" value=movie.rating)
    input(type="submit" value="SAVE")