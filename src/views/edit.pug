extends templates/layout

block content
  h2=pageTitle
  p.info Please fill the form to update a movie.
  form(method="POST" enctype="multipart/form-data")
    input(type="text" name="title" placeholder="Title" required maxlength=50 value=movie.title)
    input(type="text" name="summary" placeholder="Summary" required minlength=20 value=movie.summary)
    input(type="text" name="year" placeholder="Release Year" value=movie.year)
    input(type="text" name="rating" placeholder="Rating" value=movie.rating)
    input(type="text" name="genres" placeholder="Genres (by comma)" value=movie.genres.join(', '))
    input(type="text" name="posterImage" placeholder="Poster Image Path" value=movie.posterImage)
    label(for="movie") Movie File
    input(type="file" id="movie" name="movie" accept="video/*" value=movie.fileUrl)
    input(type="submit" value="SAVE")
  if errorMessage
    p.warning=errorMessage