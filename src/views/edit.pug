extends templates/layout

block content
  h2=pageTitle
  form(action="/edit" method="POST")
    input(type="text" name="title" placeholder="영화 제목" required)
    input(type="text" name="summary" placeholder="줄거리" required)
    input(type="text" name="year" placeholder="출시 연도" required)
    input(type="text" name="rating" placeholder="평점" required)
    input(type="text" name="genres" placeholder="장르 (,로 구분)" required)
    input(type="submit" value="SAVE")